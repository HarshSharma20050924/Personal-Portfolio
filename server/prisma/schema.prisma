// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model GeneralInfo {
  id              Int     @id @default(autoincrement())
  name            String
  title           String
  description     String
  profileImageUrl String
  email           String?
  phone           String?
  quote           String?
  resumeUrl       String?
  template        String? @default("default")
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String
  level Int
}

model Project {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  imageUrl       String
  videoUrl       String?  // New field for video showcase (YouTube/MP4)
  docUrl         String?  // New field for document PDF
  huggingFaceUrl String?  // New field for Hugging Face links
  tags           String[]
  liveUrl        String?
  repoUrl        String?
}

model SocialLink {
  id   Int    @id @default(autoincrement())
  name String
  url  String
  icon String
}

model Article {
  id      Int    @id @default(autoincrement())
  title   String
  excerpt String
  date    String
  url     String
}

model PlaygroundConfig {
  id                   Int     @id @default(autoincrement())
  heroTitle            String?
  heroSubtitle         String?
  bgType               String  @default("solid")
  bgColor1             String  @default("#ffffff")
  bgColor2             String  @default("#f0f0f0")
  textColor            String  @default("#000000")
  primaryColor         String  @default("#3b82f6")
  cardStyle            String  @default("solid")
  borderRadius         String  @default("rounded-lg")
  showHero             Boolean @default(true)
  showSkills           Boolean @default(true)
  showProjects         Boolean @default(true)
  showContact          Boolean @default(true)
  animationSpeed       String  @default("normal")
  particleCount        Int?    @default(200)
  particleSpread       Int?    @default(10)
  particleBaseSize     Int?    @default(100)
  moveParticlesOnHover Boolean? @default(true)
  disableRotation      Boolean? @default(false)
  particleSpeed        Float?   @default(0.1)
  flLineCount          Int?     @default(10)
  flLineDistance       Float?   @default(5.0)
  flBendRadius         Float?   @default(5.0)
  flBendStrength       Float?   @default(-0.5)
  flParallax           Boolean? @default(true)
}