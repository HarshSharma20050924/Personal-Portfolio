datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model BiometricCredential {
  id           String   @id @default(uuid())
  credentialId String   @unique
  deviceName   String
  createdAt    DateTime @default(now())
}

model GeneralInfo {
  id              Int     @id @default(autoincrement())
  name            String
  title           String
  description     String
  profileImageUrl String
  email           String?
  phone           String?
  quote           String?
  resumeUrl       String?
  template        String? @default("default")
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String
  level Int
}

model Project {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  imageUrl       String
  videoUrl       String?
  docUrl         String?
  tags           String[]
  liveUrl        String?
  repoUrl        String?
  huggingFaceUrl String?
  featured       Boolean? @default(false)

  challenge      String?
  challengeImage String?
  outcome        String?
  outcomeImage   String?
}

model SocialLink {
  id   Int    @id @default(autoincrement())
  name String
  url  String
  icon String
}

model Article {
  id       Int     @id @default(autoincrement())
  title    String
  excerpt  String
  content  String?
  imageUrl String?
  date     String
  url      String?
}

model Experience {
  id          Int    @id @default(autoincrement())
  position    String
  company     String
  period      String
  description String
}

model Education {
  id          Int    @id @default(autoincrement())
  degree      String
  institution String
  period      String
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model PlaygroundConfig {
  id                   Int      @id @default(autoincrement())
  heroTitle            String?
  heroSubtitle         String?
  bgType               String   @default("gradient")
  bgColor1             String   @default("#0f172a")
  bgColor2             String   @default("#1e293b")
  textColor            String   @default("#f8fafc")
  primaryColor         String   @default("#38bdf8")
  cardStyle            String   @default("glass")
  borderRadius         String   @default("rounded-2xl")
  showHero             Boolean  @default(true)
  showSkills           Boolean  @default(true)
  showProjects         Boolean  @default(true)
  showContact          Boolean  @default(true)
  animationSpeed       String   @default("normal")
  particleCount        Int?     @default(200)
  particleSpread       Int?     @default(10)
  particleBaseSize     Int?     @default(100)
  moveParticlesOnHover Boolean? @default(true)
  disableRotation      Boolean? @default(false)
  particleSpeed        Float?   @default(0.1)
  flLineCount          Int?     @default(10)
  flLineDistance       Float?   @default(5.0)
  flBendRadius         Float?   @default(5.0)
  flBendStrength       Float?   @default(-0.5)
  flParallax           Boolean? @default(true)
}
